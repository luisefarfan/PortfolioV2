---
import { personalInfo } from '@constants/content';

interface Props {
  lang: 'en' | 'es';
  class?: string;
}

const { lang, class: customClass }: Props = Astro.props;

const content = {
  en: {
    resumeButton: 'Download Resume',
    resumeText: 'Interested in working together? Get my full resume:',
  },
  es: {
    resumeButton: 'Descargar Currículum',
    resumeText: '¿Interesado en trabajar juntos? Obtén mi Currículum completo:',
  },
};
---

<a
  href={personalInfo.resume}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'inline-flex items-center gap-3 bg-primary-400 hover:bg-primary-500 text-dark-900 px-5 py-2.5 rounded-lg font-semibold transition-all duration-200 hover:scale-105 group',
    customClass,
  ]}
  aria-label={content[lang].resumeButton}
>
  <svg
    class="w-4 h-4 group-hover:animate-bounce"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
    ></path>
  </svg>
  {content[lang].resumeButton}
</a>
