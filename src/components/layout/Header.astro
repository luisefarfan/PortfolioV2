---
import { translations } from '../../constants/content';

export interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = translations[lang];
---

<header
  class="fixed top-0 w-full bg-dark-950/80 backdrop-blur-md border-b border-dark-800 z-50"
>
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a
        href={lang === 'es' ? '/es' : '/'}
        class="text-xl font-bold text-primary-500"
      >
        Luis Farfan
      </a>

      <div class="hidden md:flex items-center space-x-8">
        <a
          href={`${lang === 'es' ? '/es' : ''}#home`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.home}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#about`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.about}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#experience`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.experience}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#projects`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.projects}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#skills`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.skills}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#contact`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.contact}
        </a>
      </div>

      <div class="flex items-center space-x-4">
        <!-- Language Toggle -->
        <div class="flex items-center space-x-2">
          <a
            href="/"
            class={`px-2 py-1 rounded text-sm ${lang === 'en' ? 'bg-primary-500 text-white' : 'text-gray-400 hover:text-white'}`}
          >
            EN
          </a>
          <a
            href="/es"
            class={`px-2 py-1 rounded text-sm ${lang === 'es' ? 'bg-primary-500 text-white' : 'text-gray-400 hover:text-white'}`}
          >
            ES
          </a>
        </div>

        <!-- Theme Toggle -->
        <button
          id="theme-toggle"
          class="p-2 rounded-lg hover:bg-dark-800 transition-colors"
          aria-label="Toggle theme"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path
              class="dark:hidden"
              fill-rule="evenodd"
              d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
              clip-rule="evenodd"></path>
            <path
              class="hidden dark:block"
              d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
            ></path>
          </svg>
        </button>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-toggle"
          class="md:hidden p-2 rounded-lg hover:bg-dark-800 transition-colors"
          aria-label="Toggle mobile menu"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden mt-4 pb-4 border-t border-dark-800"
    >
      <div class="flex flex-col space-y-4 pt-4">
        <a
          href={`${lang === 'es' ? '/es' : ''}#home`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.home}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#about`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.about}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#experience`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.experience}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#projects`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.projects}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#skills`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.skills}
        </a>
        <a
          href={`${lang === 'es' ? '/es' : ''}#contact`}
          class="hover:text-primary-500 transition-colors"
        >
          {t.nav.contact}
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
