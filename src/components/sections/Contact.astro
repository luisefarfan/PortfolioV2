---
import { personalInfo } from '@constants/content';
// Icons
import Phone from '@components/svg/Phone.astro';
import Email from '@components/svg/Email.astro';
import LinkedIn from '@components/svg/LinkedIn.astro';
import GitHub from '@components/svg/GitHub.astro';
import WhatsApp from '@components/svg/WhatsApp.astro';

interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'en' }: Props = Astro.props;

const sectionTitle: { en: string; es: string } = {
  en: 'Contact.',
  es: 'Contacto.',
};

const content = {
  en: {
    subtitle: "Let's work together",
    description:
      "I'm always interested in new opportunities and collaborations. Feel free to reach out!",
    form: {
      name: 'Name',
      email: 'Email',
      message: 'Message',
      send: 'Send Message',
    },
    whatsAppMe: 'WhatsApp Me',
    resumeButton: 'Download Resume',
    resumeText: 'Interested in working together? Get my full resume:',
  },
  es: {
    subtitle: 'Trabajemos juntos',
    description:
      'Siempre estoy interesado en nuevas oportunidades y colaboraciones. ¡No dudes en contactarme!',
    form: {
      name: 'Nombre',
      email: 'Email',
      message: 'Mensaje',
      send: 'Enviar Mensaje',
    },
    whatsAppMe: 'Envíame un WhatsApp',
    resumeButton: 'Descargar Currículum',
    resumeText: '¿Interesado en trabajar juntos? Obtén mi Currículum completo:',
  },
};
---

<section id="contact" class="py-20 px-6">
  <div class="container mx-auto">
    <h2 class="text-4xl lg:text-6xl font-bold text-center mb-8">
      {sectionTitle[lang]}
    </h2>

    <p class="text-center text-gray-300 mb-16 max-w-2xl mx-auto">
      {content[lang].description}
    </p>

    <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Contact Info -->
      <div class="space-y-8">
        <h3 class="text-2xl font-bold text-primary-400 mb-6">
          {content[lang].subtitle}
        </h3>

        <!-- Resume Download Section -->
        <div
          class="bg-dark-800/30 backdrop-blur-sm rounded-lg p-6 border border-primary-400/20"
        >
          <p class="text-gray-300 text-sm mb-4">
            {content[lang].resumeText}
          </p>
          <a
            href={personalInfo.resume}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 bg-primary-400 hover:bg-primary-500 text-dark-900 px-5 py-2.5 rounded-lg font-semibold transition-all duration-200 hover:scale-105 group text-sm"
            aria-label={content[lang].resumeButton}
          >
            <svg
              class="w-4 h-4 group-hover:animate-bounce"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            {content[lang].resumeButton}
          </a>
        </div>

        <div class="space-y-6">
          <div class="flex items-center space-x-4">
            <div class="p-3 bg-primary-400/10 rounded-lg">
              <span class="w-6 block text-primary-400">
                <WhatsApp />
              </span>
            </div>
            <div>
              <p class="text-gray-400 text-sm">WhatsApp</p>
              <a
                href={personalInfo.contact.whatsapp[lang]}
                target="_blank"
                rel="noopener noreferrer"
                class="text-white hover:text-primary-400 transition-colors underline"
              >
                {content[lang].whatsAppMe}
              </a>
            </div>
          </div>

          <div class="flex items-center space-x-4">
            <div class="p-3 bg-primary-400/10 rounded-lg">
              <span class="w-6 block text-primary-400">
                <Email />
              </span>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Email</p>
              <a
                href={`mailto:${personalInfo.contact.email}`}
                class="text-white hover:text-primary-400 transition-colors underline"
              >
                {personalInfo.contact.email}
              </a>
            </div>
          </div>

          <div class="flex items-center space-x-4">
            <div class="p-3 bg-primary-400/10 rounded-lg">
              <span class="text-primary-400 w-6 h-6 block">
                <Phone />
              </span>
            </div>
            <div>
              <p class="text-gray-400 text-sm">
                {lang === 'en' ? 'Phone' : 'Teléfono'}
              </p>
              <a
                href={`tel:${personalInfo.contact.phone}`}
                class="text-white hover:text-primary-400 transition-colors underline"
              >
                {personalInfo.contact.phone}
              </a>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="pt-8">
          <h4 class="text-lg font-semibold mb-4">
            {lang === 'en' ? 'Follow me' : 'Sígueme'}
          </h4>
          <div class="flex space-x-4">
            <a
              href={personalInfo.contact.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 bg-dark-800 hover:bg-primary-400 hover:text-dark-900 rounded-lg transition-all duration-200"
              aria-label="LinkedIn"
            >
              <span class="block w-6">
                <LinkedIn />
              </span>
            </a>
            <a
              href={personalInfo.contact.github}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 bg-dark-800 hover:bg-primary-400 hover:text-dark-900 rounded-lg transition-all duration-200"
              aria-label="GitHub"
            >
              <span class="block w-6">
                <GitHub />
              </span>
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-dark-800/50 backdrop-blur-sm rounded-lg p-8">
        <form class="space-y-6" action="#" method="POST">
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-gray-300 mb-2"
            >
              {content[lang].form.name}
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-transparent text-white placeholder-gray-400"
              placeholder={content[lang].form.name}
            />
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-300 mb-2"
            >
              {content[lang].form.email}
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-transparent text-white placeholder-gray-400"
              placeholder={content[lang].form.email}
            />
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-medium text-gray-300 mb-2"
            >
              {content[lang].form.message}
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-transparent text-white placeholder-gray-400 resize-none"
              placeholder={content[lang].form.message}></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-primary-400 hover:bg-primary-500 text-dark-900 px-8 py-3 rounded-lg font-semibold transition-all duration-200 hover:scale-105 cursor-pointer"
          >
            {content[lang].form.send}
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
