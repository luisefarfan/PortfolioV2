---
import { Image } from 'astro:assets';
import DownloadResumeButton from '@components/ui/DownloadResumeButton.astro';
import { aboutContent, personalInfo } from '@constants/content';
import Arrow from '@components/svg/Arrow.astro';
import { CDN_URL } from '@constants/index';

interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'en' }: Props = Astro.props;

const sectionTitle: { en: string; es: string } = {
  en: 'About.',
  es: 'Acerca.',
};

const resumeButton: { en: string; es: string } = {
  en: 'Download Resume',
  es: 'Descargar Curr√≠culum',
};
---

<section id="about" class="py-20">
  <main class="container">
    <h2 class="text-4xl lg:text-6xl font-bold text-center mb-16">
      {sectionTitle[lang]}
    </h2>
    <div class="grid lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
      <!-- Photo placeholder -->
      <div class="flex justify-center lg:justify-start">
        <div
          class="md:w-100 md:h-100 sm:w-[60%] w-[80%] bg-primary-400 rounded-xl p-[3px] aspect-square"
        >
          <Image
            src={`${CDN_URL}/images/profile.webp`}
            alt="Luis Farfan"
            class="w-full h-full aspect-square object-cover rounded-lg"
            inferSize
          />
        </div>
      </div>
      <!-- Content -->
      <div class="space-y-3">
        <div
          class="text-sm text-primary-400 font-semibold tracking-wider uppercase"
        >
          {personalInfo.role[lang]}
        </div>
        <p class="text-lg text-gray-300 leading-relaxed whitespace-pre-line">
          {aboutContent[lang]}
        </p>

        <!-- Resume Download Button -->
        <div class="pt-4 flex items center gap-4 flex-wrap">
          <DownloadResumeButton lang={lang} />
          <a
            href="#experience"
            class="border border-primary-400 text-primary-400 hover:bg-primary-400 hover:text-dark-900 px-8 py-3 rounded-lg font-semibold transition-all duration-200 w-fit flex items-center gap-2 group"
          >
            <span>
              {
                lang === 'en'
                  ? 'My Professional Journey'
                  : 'Mi Trayectoria Profesional'
              }
            </span>
            <Arrow direction="down" />
          </a>
        </div>
      </div>
    </div>
  </main>
</section>
