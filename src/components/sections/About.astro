---
import { aboutContent, translations } from '../../constants/content';

export interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = translations[lang];
---

<section id="about" class="py-20 px-6">
  <div class="container mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <h2 class="text-4xl lg:text-5xl font-bold">
          {t.about.title}
        </h2>

        <p class="text-gray-300 text-lg leading-relaxed">
          {aboutContent[lang]}
        </p>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 pt-8">
          <div class="text-center">
            <div class="text-3xl lg:text-4xl font-bold text-primary-500">
              120+
            </div>
            <div class="text-sm text-gray-400 mt-2">
              {t.about.stats.projects}
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl lg:text-4xl font-bold text-primary-500">
              95%
            </div>
            <div class="text-sm text-gray-400 mt-2">
              {t.about.stats.satisfaction}
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl lg:text-4xl font-bold text-primary-500">
              5+
            </div>
            <div class="text-sm text-gray-400 mt-2">
              {t.about.stats.experience}
            </div>
          </div>
        </div>
      </div>

      <div class="space-y-6">
        <!-- Service Cards -->
        <div
          class="bg-dark-800/50 border border-dark-700 rounded-xl p-6 hover:border-primary-500/30 transition-colors"
        >
          <div class="flex items-center space-x-4">
            <div
              class="w-12 h-12 bg-primary-500/20 rounded-lg flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-primary-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold">Website Development</h3>
              <p class="text-gray-400 text-sm">Full-stack web applications</p>
            </div>
          </div>
        </div>

        <div
          class="bg-dark-800/50 border border-dark-700 rounded-xl p-6 hover:border-primary-500/30 transition-colors"
        >
          <div class="flex items-center space-x-4">
            <div
              class="w-12 h-12 bg-primary-500/20 rounded-lg flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-primary-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold">App Development</h3>
              <p class="text-gray-400 text-sm">Mobile and web applications</p>
            </div>
          </div>
        </div>

        <div
          class="bg-dark-800/50 border border-dark-700 rounded-xl p-6 hover:border-primary-500/30 transition-colors"
        >
          <div class="flex items-center space-x-4">
            <div
              class="w-12 h-12 bg-primary-500/20 rounded-lg flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-primary-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold">Website Hosting</h3>
              <p class="text-gray-400 text-sm">Deployment and maintenance</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
