---
import { aboutContent, personalInfo } from '@constants/content';

interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'en' }: Props = Astro.props;

const sectionTitle: { en: string; es: string } = {
  en: 'About.',
  es: 'Acerca.',
};

const resumeButton: { en: string; es: string } = {
  en: 'Download Resume',
  es: 'Descargar Currículum',
};
---

<section id="about" class="py-20 px-6">
  <div class="container mx-auto">
    <h2 class="text-4xl lg:text-6xl font-bold text-center mb-16">
      {sectionTitle[lang]}
    </h2>
    <div class="grid lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
      <!-- Photo placeholder -->
      <div class="flex justify-center lg:justify-start">
        <div class="w-80 h-80 bg-primary-400 rounded-lg"></div>
      </div>
      <!-- Content -->
      <div class="space-y-3">
        <div
          class="text-sm text-primary-400 font-semibold tracking-wider uppercase"
        >
          Tech Lead & Full-Stack Developer
        </div>
        <p class="text-lg text-gray-300 leading-relaxed">
          {aboutContent[lang]}
        </p>

        <!-- Resume Download Button -->
        <div class="pt-4">
          <a
            href={personalInfo.resume}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 bg-primary-400 hover:bg-primary-500 text-dark-900 px-6 py-3 rounded-lg font-semibold transition-all duration-200 hover:scale-105 group"
            aria-label={resumeButton[lang]}
          >
            <svg
              class="w-5 h-5 group-hover:animate-bounce"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            {resumeButton[lang]}
          </a>
        </div>

        <div class="grid grid-cols-2 gap-6 pt-6">
          <div>
            <h4 class="font-semibold text-primary-400 mb-2">
              {lang === 'en' ? 'Experience' : 'Experiencia'}
            </h4>
            <p class="text-gray-300">5+ {lang === 'en' ? 'Years' : 'Años'}</p>
          </div>
          <div>
            <h4 class="font-semibold text-primary-400 mb-2">
              {lang === 'en' ? 'Projects' : 'Proyectos'}
            </h4>
            <p class="text-gray-300">
              20+ {lang === 'en' ? 'Completed' : 'Completados'}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
