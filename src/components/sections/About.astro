---
import DownloadResumeButton from '@components/ui/DownloadResumeButton.astro';
import { aboutContent, personalInfo } from '@constants/content';
import { Image } from 'astro:assets';
import profilePhoto from '@assets/images/profile.webp';

interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'en' }: Props = Astro.props;

const sectionTitle: { en: string; es: string } = {
  en: 'About.',
  es: 'Acerca.',
};

const resumeButton: { en: string; es: string } = {
  en: 'Download Resume',
  es: 'Descargar Currículum',
};
---

<section id="about" class="py-20">
  <main class="container">
    <h2 class="text-4xl lg:text-6xl font-bold text-center mb-16">
      {sectionTitle[lang]}
    </h2>
    <div class="grid lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
      <!-- Photo placeholder -->
      <div class="flex justify-center lg:justify-start">
        <div
          class="md:w-100 md:h-100 sm:w-[60%] w-[80%] bg-primary-400 rounded-xl p-[3px]"
        >
          <Image
            src={profilePhoto}
            alt="Luis Farfan"
            class="w-full h-full aspect-square object-cover rounded-lg"
          />
        </div>
      </div>
      <!-- Content -->
      <div class="space-y-3">
        <div
          class="text-sm text-primary-400 font-semibold tracking-wider uppercase"
        >
          {personalInfo.role[lang]}
        </div>
        <p class="text-lg text-gray-300 leading-relaxed">
          {aboutContent[lang]}
        </p>

        <!-- Resume Download Button -->
        <div class="pt-4">
          <DownloadResumeButton lang={lang} />
        </div>

        <div class="grid md:grid-cols-2 grid-cols-1 gap-6 pt-6">
          <div>
            <h4 class="font-semibold text-primary-400 mb-2">
              {lang === 'en' ? 'Experience' : 'Experiencia'}
            </h4>
            <p class="text-gray-300">6+ {lang === 'en' ? 'Years' : 'Años'}</p>
          </div>
          <div>
            <h4 class="font-semibold text-primary-400 mb-2">
              {lang === 'en' ? 'Projects' : 'Proyectos'}
            </h4>
            <p class="text-gray-300">
              20+ {lang === 'en' ? 'Completed' : 'Completados'}
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</section>
