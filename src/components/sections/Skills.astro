---
import { skills, translations } from '../../constants/content';

export interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;
const t = translations[lang];

const skillsByCategory = skills.reduce((acc, skill) => {
  if (!acc[skill.category]) {
    acc[skill.category] = [];
  }
  acc[skill.category].push(skill);
  return acc;
}, {});
---

<section id="skills" class="py-20 px-6 bg-dark-900/50">
  <div class="container mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold mb-4">
        {t.skills.title}
      </h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        Object.entries(skillsByCategory).map(([category, categorySkills]) => (
          <div class="bg-dark-800/50 border border-dark-700 rounded-xl p-6 hover:border-primary-500/30 transition-colors">
            <h3 class="text-xl font-semibold mb-6 text-primary-500">
              {t.skills.categories[category]}
            </h3>

            <div class="space-y-4">
              {categorySkills.map((skill) => (
                <div class="flex items-center justify-between">
                  <span class="text-gray-300">{skill.name}</span>
                  {skill.years && (
                    <span class="text-sm text-gray-400">{skill.years}y</span>
                  )}
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
