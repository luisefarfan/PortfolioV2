---
import { menuIds } from '@constants/content/home';
import StrokeText from '@components/StrokeText.astro';
import { experienceContent } from '@constants/content/experiences';
import ExperienceIcon from '@components/svg/ExperienceIcon.astro';
import Title from '@components/Title.astro';

const { title1, title2, text, experiences } = experienceContent.en;
---

<section id={menuIds.option2} class="experience-section">
  <div class="container">
    <div>
      <Title level="h2" class="flex flex-wrap mb-4">
        <span class="color-blue">{title1}</span><StrokeText color={'blue'}
          >{title2}</StrokeText
        >
      </Title>
      <p class="lg:w-8/12 w-10/12">{text}</p>
    </div>
  </div>

  <div class="container mt-20">
    <div class="grid lg:grid-cols-12 grid-cols-1 gap-10">
      <div class="flex justify-center items-center lg:col-span-4">
        <ExperienceIcon />
      </div>
      <div class="flex flex-col lg:col-span-8">
        {
          experiences.map(({ company, description }) => (
            <div class="experience-item-container mb-5">
              <Title level="h4" class="color-blue">
                {company}
              </Title>
              <p>{description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .experience-item-container {
    border: 1px solid var(--color-blue);
    border-radius: 15px;
    padding: 20px;
    transition: all 0.2s ease-in;
  }
</style>
