---
import { experiences } from '../../constants/content';

interface Props {
  lang: 'en' | 'es';
}

const { lang = 'en' }: Props = Astro.props;

const sectionTitle: { en: string; es: string } = {
  en: 'Experience.',
  es: 'Experiencia.',
};
---

<section id="experience" class="py-20 px-6 bg-dark-800/30">
  <div class="container mx-auto">
    <h2 class="text-4xl lg:text-6xl font-bold text-center mb-16">
      {sectionTitle[lang]}
    </h2>

    <div class="max-w-4xl mx-auto">
      <div class="space-y-8">
        {
          experiences.map((exp, index) => (
            <div class="relative pl-8 border-l-2 border-primary-400/30">
              <div class="absolute -left-2 top-0 w-4 h-4 bg-primary-400 rounded-full" />

              <div class="bg-dark-800/50 backdrop-blur-sm rounded-lg p-6 hover:bg-dark-700/50 transition-all duration-200">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                  <h3 class="text-xl font-bold text-white">{exp.company}</h3>
                  <span class="text-primary-400 font-mono text-sm">
                    {exp.period}
                  </span>
                </div>

                <h4 class="text-lg font-semibold text-primary-400 mb-3">
                  {exp.role}
                </h4>

                <p class="text-gray-300 mb-4 leading-relaxed">
                  {exp.description}
                </p>

                {exp.technologies && (
                  <div class="flex flex-wrap gap-2">
                    {exp.technologies.map((tech) => (
                      <span class="px-3 py-1 bg-primary-400/10 text-primary-400 rounded-full text-sm font-medium">
                        {tech}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
