---
interface Props {
  href?: string;
  color?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const { href, color, type = 'button', class: className } = Astro.props;
---

{
  href ? (
    <a {href} class={`btn inline-block w-fit ${color} ${className}`}>
      <slot />
    </a>
  ) : (
    <button type={type} class={`btn ${color} ${className}`}>
      <slot />
    </button>
  )
}

<style>
  .btn {
    border: 0 solid;
    box-shadow: inset 0 0 20px rgba(255, 255, 255, 0);
    outline: 1px solid;
    outline-color: rgba(255, 255, 255, 0.5);
    outline-offset: 0px;
    text-shadow: none;
    transition: all 1250ms cubic-bezier(0.19, 1, 0.22, 1);
    padding: 15px 20px;
    border-radius: 15px;
  }

  .btn.blue {
    color: var(--color-blue);
  }

  .btn:hover {
    border: 1px solid;
    box-shadow:
      inset 0 0 20px rgba(255, 255, 255, 0.5),
      0 0 20px rgba(255, 255, 255, 0.2);
    outline-color: rgba(255, 255, 255, 0);
    outline-offset: 15px;
    text-shadow: 1px 1px 2px #427388;
  }
</style>
